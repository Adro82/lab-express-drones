<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1 class="text-center">Create New Drone</h1>
            <hr>

            <form action="/drones/create" method="POST">
                <div class="mb-4">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-4">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>

                <div class="mb-4">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Create Drone</button>
                </div>

            </form>
        </div>
    </div>
</div>